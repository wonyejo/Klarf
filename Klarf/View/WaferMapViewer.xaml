<UserControl x:Class="Klarf.View.WaferMapViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:mv="clr-namespace:Klarf.ViewModel"
             xmlns:local="clr-namespace:Klarf.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid Grid.Row="0" Grid.Column="0" x:Name="WaferMap">
        <Image x:Name="WaferMapImg" Source="{Binding waferMap}" Stretch="Uniform" />
    </Grid>
</UserControl>
